<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--title的theme设置-->
    <style name="TranslucentActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@null</item>
    </style>


    <style name="divider_account">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/text_white</item>
    </style>
    <!--global style-->
    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Login页面的style-->
    <style name="category_account">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fcws_secondary</item>
        <item name="android:textSize">@dimen/fs_body</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="login_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
    </style>
    <style name="login_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/fs_subhead</item>
        <item name="android:textColor">@color/fcw_text_icon</item>
    </style>
    <style name="login_divider">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#868787</item>
    </style>
    <style name="login_icon">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
    </style>


    <style name="login_edt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/fcw_secondary</item>
        <item name="android:textColorHint">#868787</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <!--注册页面的style-->

    <style name="regist_edt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/fcw_secondary</item>
        <item name="android:textColorHint">#868787</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="regist_account">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fcw_text_icon</item>
        <item name="android:textSize">@dimen/fs_subhead</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="regist_btn_verifycode">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textColor">@color/fcw_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/regist_btn_s</item>
        <item name="android:text">验证码</item>
    </style>

    <!--config页面的设置-->

    <style name="config_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ll_config_action</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="config_ll_item">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/btn_config_action</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="config_textview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textSize">@dimen/fs_subhead</item>
        <item name="android:lines">1</item>
    </style>

    <style name="config_img">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:src">@drawable/ic_arrow</item>
    </style>

    <style name="config_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:background">@color/fcb_divider</item>
        <item name="android:layout_height">2px</item>
    </style>
    <!--fab的style-->
    <style name="MenuButtonsSmall">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">#191919</item>
        <item name="fab_colorPressed">#919191</item>
        <item name="fab_colorRipple">#919191</item>
    </style>

    <style name="MenuButtonsSmall_b">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">#2068b2</item>
        <item name="fab_colorPressed">#2d5883</item>
        <item name="fab_colorRipple">#919191</item>
    </style>

    <style name="MenuButtonsSmall_gr">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">#393430</item>
        <item name="fab_colorPressed">#070707</item>
        <item name="fab_colorRipple">#919191</item>
    </style>


   <!--fab的样式-->
    <style name="fab_style">
        <!--fab颜色-->
        <item name="fab_colorNormal">#ebb02b</item>
        <item name="fab_colorPressed">#aa862c</item>
        <item name="fab_colorRipple">#D99200</item>
    </style>



</resources>
