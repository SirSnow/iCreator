<?xml version="1.0" encoding="utf-8"?>
<com.example.gululu.icreatorsdksampler.customizeview.MaterialRippleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/material_Channel"
    app:mrl_rippleAlpha="0.6"
    app:mrl_rippleColor="@color/ripple_color"
    app:mrl_rippleDuration="350"
    app:mrl_rippleFadeDuration="100"
    app:mrl_rippleHover="true">

        <RelativeLayout
            android:id="@+id/rl_channel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_channel1"
            android:scaleType="fitXY" />


        <TextView
            android:id="@+id/txt_channel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:layout_centerVertical="true"
            android:text="title"
            android:textSize="@dimen/fs_subhead"
            android:layout_toRightOf="@id/img_icon" />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow"
            />

            <TextView
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_marginLeft="64dp"
                android:layout_height="2px"
                android:background="@color/fcb_divider"/>

        </RelativeLayout>

</com.example.gululu.icreatorsdksampler.customizeview.MaterialRippleLayout>
